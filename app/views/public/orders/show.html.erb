<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>注文履歴詳細</h1>
  </div>
  <div class="row py-5">
    <div class="col-md-6">
      <h5>注文情報</h5>
      <table class="table table-bordered border-dark">
        <tbody>
          <tr>
            <td bgcolor="#f5f5f5">注文日</td>
            <td><%= @order.updated_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td bgcolor="#f5f5f5">配送先</td>
            <td>
              〒<%= @order.postal_code%><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td bgcolor="#f5f5f5">支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <h5>請求情報</h5>
      <table class="table table-bordered border-dark">
        <tbody>
          <tr>
            <td bgcolor="#f5f5f5">商品合計</td>
            <td><%= @order.payment_price %></td>
          </tr>
          <tr>
            <td bgcolor="#f5f5f5">配送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td bgcolor="#f5f5f5">ご請求額</td>
            <td><%= @order.shipping_cost + @order.payment_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    
    <h5>注文内容</h5>
    <table class="table table-bordered border-dark">
      <thead bgcolor="#f5f5f5">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order.order_items.each do |order_item| %>
      <tbody>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= (order_item.tax_price * 1.1).floor %></td>
          <td><%= order_item.item_amount %></td>
          <td><%= (order_item.tax_price * 1.1).floor * order_item.item_amount %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>