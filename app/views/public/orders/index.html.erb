<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>注文履歴一覧</h1>
  </div>
  <div class="row py-5">
    <table class="table table-bordered border-dark">
      <thead bgcolor="#f5f5f5">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td><%= order.updated_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.address %></td>
      <!--注文商品を表示できるようにする-->
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td><%= order.payment_price%>円</td>
          <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-sm btn-primary" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>  
</div>