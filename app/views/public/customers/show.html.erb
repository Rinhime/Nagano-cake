<h1>（会員用）マイページ</h1>
<h3>登録情報</h3>


<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td>カタカナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

