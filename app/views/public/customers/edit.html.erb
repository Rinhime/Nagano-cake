<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>会員情報編集</h1>
  </div>
  
  <div class="row py-5">
    <div class="col-md-12 offset-md-2">
      <%= form_with model: @customer, url: public_customers_show_path, method: :patch do |f| %>
        <table cellpadding="15">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ　　　</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
          </table>
          <table cellpadding="15">
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, :size=>"58" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td></td>
              <td><input class="btn btn-success" type="submit" value="編集内容を保存"></td>
              <td><%= link_to "退会する", public_customers_check_path, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>    
</div>  
  
  