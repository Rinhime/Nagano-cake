<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1><%= @customer.full_name %>さんの会員情報編集</h1>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table cellpadding="15">
        <tbody>
          <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name %></td>
              <td><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana %></td>
              <td><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td>
                <%= f.text_field :address %>
              </td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td>
                <%= f.email_field :email %>
              </td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, "true" %> 有効
                <%= f.radio_button :is_deleted, "false" %> 退会
              </td>
            </tr>
            <tr>
              <td></td>
              <td><input class="btn btn-success" type="submit" value="変更を保存"></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>    
</div>