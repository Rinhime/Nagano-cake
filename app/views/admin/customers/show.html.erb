<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1><%= @customer.full_name %>さんの会員詳細</h1>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table cellpadding="15">
        <div class="p-3">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.full_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td style="color:green"><b><%= @customer.customer_status %></b></td>
          </tr>
        </tbody>
      </div>
      </table>
    </div>
  </div>
  <div class="row py-5">
    <div class="col-md-5 offset-md-2">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_homes_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>