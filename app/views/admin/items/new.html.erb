<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>商品新規登録</h1>
  </div>
  
  <div class="row py-5">
    <div class="col-md-8">
      <%= form_with model:@item, url: admin_items_path do |f| %>
        <h4>商品画像</h4>
        <%= f.file_field :image, accept: "image/*" %>
  
        <h4>商品名</h4>
        <%= f.text_field :name %>
  
        <h4>商品説明</h4>
        <%= f.text_area :introduction %>
  
        <h4>税抜価格</h4>
        <%= f.text_field :price %>円
        <br>
        <%= f.submit '新規登録' %>
      <% end %>

    </div>
  </div>
</div>