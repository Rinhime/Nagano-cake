<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>商品編集画面</h1>
  </div>
  
  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
  <div class="row py-5">
    <div class="col-md-9 offset-md-2">
      <table>
        <tr>
          <td><%= f.label :image, "商品画像" %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name, :size=>"50" %></td>
        </tr>
        <tr>
          <td><%= f.label :introduction, "商品説明" %></td>
          <td><%= f.text_area :introduction, :size=>"52x10" %></td>
        </tr>
        <tr>
          <td><%= f.label :price, "税抜価格" %></td>
          <td><%= f.text_field :price, :size=>"50" %>円</td>
        </tr>
      </table>
    </div>  
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-5">
      <input class="btn btn-success" type="submit" value="変更を保存">
    </div>
  </div>
  <% end %>
</div>