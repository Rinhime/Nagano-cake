<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>商品一覧</h1>
    <div class="col-md-3 offset-md-7">
      <h2><%= link_to "+", new_admin_item_path %></h2>
    </div>  
  </div>
  <div class="row py-5">
    <div class="col-md-10">
      <table class="table">
        <thead class="table-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <%= item.id %>
              </td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>