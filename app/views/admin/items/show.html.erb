<div class="container px-5 px-sm-0 py-5">
  <div class="row">
    <h1>商品詳細</h1>
  </div>

  <div class="row py-5">
    <div class="col-md-3">
      <%= image_tag @item.get_image(100,100), :size =>'200x200' %>
    </div>
    <table>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)　　</td>
        <td><%= @item.add_tax_price %>（<%= @item.price %>）円</td>
      </tr>
    </table>
  </div>
  <div class="row py-9">
    <div class="col-md-5 offset-md-4">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
    </div>  
  </div>
</div>